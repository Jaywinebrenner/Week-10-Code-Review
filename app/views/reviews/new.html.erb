<% if @review.errors.any? %>
  <h3>The review must be between 50 - 250 characters.</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




<h1>Add a new review:</h1>

<%= form_for [@product, @review] do |f| %>
<%= f.label :author %>
<%= f.text_field :author %>

<%= f.label :content_body %>
<%= f.text_area :content_body %>

<%= f.label :rating %>
<%= f.number_field :rating %>

<p><%= f.submit %></p>
<% end %>

