<% if @review.errors.any? %>
  <h2 class="error">ERROR, ERROR, ERROR</h2>
  <h3 class="error">You have an error.</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>





<h1>Add a new review:</h1>

<%= form_for [@product, @review] do |f| %>
<%= f.label :author %>
<%= f.text_field :author %>

<%= f.label :content_body %>
<%= f.text_area :content_body %>

<%= f.label :rating %>
<%= f.number_field :rating %>

<p><%= f.submit %></p>
<% end %>
