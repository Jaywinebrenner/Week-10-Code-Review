
<% if @product.errors.any? %>
<h3 class="error">Please fix these errors:</h3>
<ul>
  <% @product.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<div class="new-header">
  <h1 class="new-text">Let's make a new product.</h1>
</div>
<hr class="hr-thick">
<hr class="hr-thin">
<%= render "layouts/product_form" %>
<hr>
<p><%= link_to "Return to products", products_path %></p>
