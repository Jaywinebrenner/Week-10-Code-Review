<div class="header-top">
  <h1 class="header1">Mario's</h1>
  <h2 class="header2">Discount Specialty Foods</h2>
</div>


<div class="container">
  <div class="row">
    <div class="col-lg-6">

      <h1>Products</h1>

      <% if @products.any? %>
        <ul>
          <% @products.each do |product| %>
            <li><%= link_to product.name, product_path(product) %></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no products yet.</p>
      <% end %>


      <p><%= link_to "Create new product", new_product_path %></p>
    </div>

    <div class="col-lg-6">
      One of three columns
    </div>
  </div>
</div>
